<Window x:Class="Firebase_WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firebase_WpfApp"
        mc:Ignorable="d"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Plotting firebase data" Width="640" Height="490" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <oxy:PlotView x:Name="plot1" Width="400" Height="400" />
            <Label x:Name="label1"  Content="Last update: ---" ></Label>
            <Button Content="Update" Width="100" Click="Button_Click" HorizontalAlignment="Left" ></Button>
        </StackPanel>
    </Grid>
</Window>
